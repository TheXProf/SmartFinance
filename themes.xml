<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SmartFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Ana tema renkleri -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Durum çubuğu -->
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- Metin renkleri -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material bileşenleri için stil -->
        <item name="materialButtonStyle">@style/Widget.SmartFinance.Button</item>
        <item name="materialCardViewStyle">@style/Widget.SmartFinance.CardView</item>
    </style>

    <!-- Özel buton stili -->
    <style name="Widget.SmartFinance.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">25dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Özel kart stili -->
    <style name="Widget.SmartFinance.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>